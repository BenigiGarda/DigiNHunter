<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/priceglobal"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="328dp"
        android:text="price"
        android:fontFamily="@font/impact"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="328dp"
        android:fontFamily="@font/impact"
        android:text="Digimon Price : "
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="360dp"
        android:text="Quantity? : "
        android:fontFamily="@font/impact"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="296dp"
        android:text="Digimon Name : "
        android:fontFamily="@font/impact"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Arrow"
        android:layout_width="51dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/imageglobal"
        android:layout_width="149dp"
        android:layout_height="135dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="264dp"
        android:fontFamily="@font/impact"
        android:text="Digimon Number : "
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberglobal"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="264dp"
        android:text="number"
        android:fontFamily="@font/impact"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameglobal"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="296dp"
        android:text="name"
        android:fontFamily="@font/impact"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/detailQty"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:fontFamily="@font/impact"
        android:hint="Quantity"
        android:inputType="number"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="444dp"
        android:background="#0000FF"
        android:text="Order"
        android:fontFamily="@font/impact"
        android:textColor="#F59A23"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>